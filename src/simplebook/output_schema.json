{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/SimpleBook-output.schema.json",
  "title": "SimpleBook Output",
  "description": "Schema for SimpleBook tree structure from the SimpleBook module",
  "type": "object",
  "required": ["metadata", "chapters"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["title", "author", "language"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Book title"
        },
        "author": {
          "type": "string",
          "description": "Book author/creator"
        },
        "language": {
          "type": "string",
          "description": "Book language code (e.g., 'en', 'en-US')"
        },
        "isbn": {
          "type": "string",
          "description": "ISBN identifier (if available)",
          "default": ""
        },
        "uuid": {
          "type": "string",
          "description": "UUID identifier (if available)",
          "default": ""
        }
      }
    },
    "chapters": {
      "type": "array",
      "description": "List of book chapters with their content",
      "items": {
        "type": "object",
        "required": ["name", "elements", "chunks"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Chapter name/title"
          },
          "elements": {
            "type": "array",
            "description": "List of typed elements in the chapter",
            "items": {
              "type": "object",
              "required": ["type"],
              "properties": {
                "type": {
                  "type": "string",
                  "description": "Element type (e.g., paragraph, blockquote, table)"
                },
                "text": {
                  "type": "string",
                  "description": "Normalized text content (when applicable)"
                },
                "raw_html": {
                  "type": "string",
                  "description": "Original raw HTML for the element"
                },
                "markdown": {
                  "type": "string",
                  "description": "Markdown representation of the element content"
                },
                "role": {
                  "type": "string",
                  "description": "Semantic role for the element (e.g., title, body, comment, heading)"
                },
                "rows": {
                  "type": "array",
                  "description": "Table rows when element type is table",
                  "items": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                },
                "meta": {
                  "type": "object",
                  "description": "Optional metadata for the element"
                }
              }
            }
          },
          "chunks": {
            "type": "array",
            "description": "Element indexes at which new chunks start",
            "items": {
              "type": "integer",
              "description": "Zero-based element index"
            }
          }
        }
      }
    }
  }
}
